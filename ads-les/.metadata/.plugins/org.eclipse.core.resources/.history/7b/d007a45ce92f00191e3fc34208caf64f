package edu.curso;

import java.io.File;

public class GravacaoEmArquivo {

	public static void main(String[] args) {
		File f = new File("C:/Curso/nome.txt");
		System.out.printf("Abrindo arquivo %s para gravação", f.getName());
		System.out.printf("Arquivo Existe: %b", f.exists());
		System.out.printf("Pode ler: %b", f.canRead());
		System.out.printf("Arquivo %b", f.isFile());
		System.out.printf("Diretorio %b", f.isDirectory());

		// FileWriter fw = new FileWriter( f );
		
		

	}

}
